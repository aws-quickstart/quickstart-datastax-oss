                  - |
                    triggers=post.update
                  - >
                    path=Resources.DDACSeedNode2.Metadata.AWS::CloudFormation::Init
                  - 'action=/usr/local/bin/cfn-init -v '
                  - '         --stack '
                  - !Ref 'AWS::StackName'
                  - '         --resource DDACSeedNode2 '
                  - '         --configsets cs_install '
                  - '         --region '
                  - !Ref 'AWS::Region'
